<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.chy.happyfarmhouse.MainActivity">

    <include layout="@layout/common_title_layout" />

    <TextView
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="欢迎进入玩家世界！"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.app.njl.ui.tabstrip.PagerSlidingTabStrip
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="38dip"
        app:pstsIndicatorColor="@android:color/holo_blue_light"
        app:selectedTabTextColor="@android:color/holo_blue_light"
        app:tabTextSize="@dimen/text_size_14"
        app:tabTextColor="@color/black"
        app:pstsUnderlineHeight="0.5dp"
        app:pstsUnderlineColor="@color/gray_light"
        app:pstsTabPaddingLeftRight="12dp"
        app:pstsIndicatorHeight="2dp"
        app:pstsShouldExpand="@bool/default_circle_indicator_centered"
        app:pstsDividerColor="@android:color/transparent"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnSure"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:layout_below="@+id/rl_1"
        android:layout_marginLeft="18.0dip"
        android:layout_marginRight="18.0dip"
        android:layout_marginTop="30.0dip"
        android:background="@drawable/btn_bg_gray"
        android:clickable="false"
        android:enabled="false"
        android:text="登录"
        android:textColor="#ffffffff"
        android:textSize="18.0sp" />

    <TextView
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:text="忘记密码？"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/register_ll"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="5dp"
        style="@style/list_item_top">
        <TextView
            android:text="立即注册"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#d6a89191"
            android:layout_width="wrap_content"
            android:layout_height="1dp"/>
        <TextView
            android:textSize="15sp"
            android:layout_weight="1"
            android:text="第三方账户登录"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#d6a89191"
            android:layout_width="wrap_content"
            android:layout_height="1dp"/>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@mipmap/wechat"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <TextView
                android:layout_marginTop="10dp"
                android:text="微信登录"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@mipmap/qq"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <TextView
                android:layout_marginTop="10dp"
                android:text="QQ登录"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>



        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@mipmap/weibo"
                android:layout_width="60dp"
                android:layout_height="60dp" />

            <TextView
                android:layout_marginTop="10dp"
                android:text="微博登录"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>

</LinearLayout>

