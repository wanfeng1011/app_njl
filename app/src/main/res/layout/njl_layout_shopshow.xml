<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center_vertical"
        android:background="@mipmap/hotel"></LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ccc1cc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="6"
            android:orientation="vertical"
            android:paddingLeft="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="住宿："
                    android:textSize="16sp"
                    android:textColor="@color/green_light"
                    android:layout_gravity="left" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120好评/300评论"
                    android:textSize="16sp"
                    android:textColor="@color/green_light"
                    android:layout_gravity="left"
                    android:paddingLeft="10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点评："
                    android:textSize="16sp"
                    android:textColor="@color/green_light"
                    android:layout_gravity="left" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120推荐"
                    android:textSize="16sp"
                    android:textColor="@color/green_light"
                    android:layout_gravity="left"
                    android:paddingLeft="10dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#ccc1cc"/>

            <LinearLayout
                android:id="@+id/stay_live_time_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/stay_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="住店:"
                    android:textSize="14sp"
                    android:textColor="@color/green_light"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="left" />

                <TextView
                    android:id="@+id/live_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="离店:"
                    android:textSize="14sp"
                    android:textColor="@color/green_light"
                    android:layout_marginRight="5dp"
                    android:layout_gravity="left" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@mipmap/select_up"
                    android:scaleType="center"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="4"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:drawableLeft="@mipmap/icon_location"
                android:drawablePadding="2dp"
                android:text="店家地址"
                android:textSize="14sp" />


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:src="@mipmap/hotel"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#ccc1cc"/>

    <com.app.njl.ui.tabstrip.PagerSlidingTabStrip
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="38dip"
        app:pstsIndicatorColor="@android:color/holo_blue_light"
        app:selectedTabTextColor="@android:color/holo_blue_light"
        app:tabTextSize="@dimen/text_size_14"
        app:tabTextColor="@color/black"
        app:pstsUnderlineHeight="0.5dp"
        app:pstsUnderlineColor="@color/gray_light"
        app:pstsTabPaddingLeftRight="12dp"
        app:pstsIndicatorHeight="2dp"
        app:pstsShouldExpand="@bool/default_circle_indicator_centered"
        app:pstsDividerColor="@android:color/transparent"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="2dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="加入购物车"
            android:gravity="center"
            style="@style/button_textview_style"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="购物车"
            android:gravity="center"
            style="@style/button_textview_style"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="联系店家"
            android:gravity="center"
            style="@style/button_textview_style"/>
    </LinearLayout>
</LinearLayout>
