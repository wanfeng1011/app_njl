<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title_layout"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45.0dip"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/code"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/imgCode"
            android:background="@null"
            android:hint="请输入手机号码"
            android:inputType="number"
            android:maxLength="6"
            android:paddingLeft="15.0dip"
            android:singleLine="true"
            android:textColor="#ff111111"
            android:textColorHint="#ffaaaaaa"
            android:textSize="16.0sp" />

        <TextView
            android:id="@+id/btnGetCode"
            android:layout_width="90.0dip"
            android:layout_height="33.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginRight="20dp"
            style="@style/button_textview_style"
            android:text="获取验证码"
            android:textColor="#ff888888"
            android:textSize="14.0sp" />
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#ffdddddd" />

    <RelativeLayout
        android:id="@+id/layoutPhone"
        android:layout_width="fill_parent"
        android:layout_height="45.0dip">

        <EditText
            android:id="@+id/phone"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_toRightOf="@+id/imgPhone"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="11"
            android:paddingLeft="15.0dip"
            android:singleLine="true"
            android:textColor="#ff111111"
            android:textColorHint="#ffaaaaaa"
            android:textSize="16.0sp" />

        <ImageView
            android:id="@+id/imgCancel"
            android:layout_width="16.0dip"
            android:layout_height="16.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12.0dip"
            android:background="@mipmap/cancel_phone"
            android:visibility="invisible" />
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#ffdddddd" />

    <TextView
        android:layout_width="220dp"
        android:layout_height="35dp"
        style="@style/button_textview_style"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:text="注册，并立即登录"
        android:textColor="@color/textcolor_green"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="点击注册，即表示已同意《农家乐协议》。" />
</LinearLayout>
